extends layout

block content
  h1= title
  if show
    form(method='post')
      p Jaka jest twoja ulubiona pora roku?
      ul  
        each item in data 
          li    
            label=item.title
            input(type='ratio' name='quiz' value=item.id)

      input(type='submit' value="Zagłosuj")
      p Aby zobaczyć wyniki, oddaj głos.
  else
      h1 Oddałeś już głos w ankiecie! 
      p WYNIKI
      ul
      each item in data
        li #{item.title} - głosów: #{item.vote} (#{Math.round(item.vote/sum*100)}%)

      p Głosów oddano: #{sum}
